<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="CategoryInquiryMapper">

	<!-- Beans의 멤버변수(property) 이름과 대상 테이블의 컬럼(column)을 연결한다. -->
	<resultMap type="study.shop.cidermarket.model.Category" id="categoryMap">
		<result property="cateno" column="cateno" />
		<result property="name" column="name" />
	</resultMap>
	
	<!-- 단일행 조회를 위한 기능 정의 -->
	<select id="selectItem"
		parameterType="study.shop.cidermarket.model.Category"
		resultMap="categoryMap">
		SELECT name
		FROM Category
		WHERE Categoryno=#{Categoryno}
	</select>
	
	<!-- 다중행 조회를 위한 기능 정의 -->
	<select id="selectList"
		parameterType="study.shop.cidermarket.model.Category"
		resultMap="categoryMap">
		SELECT name
		FROM Category
<!-- 		
		<where>
			<if test="title != null and title != ''">
				title LIKE concat('%', #{title}, '%')
			</if>
			<if test="membno != null and membno != ''">
				AND membno=#{membno}
			</if>
		</where>
		
		ORDER BY Categoryno DESC
		
		<if test="listCount > 0">
			LIMIT #{offset}, #{listCount}
		</if> -->
	</select>	
	
	<!-- 데이터 수 조회를 위한 기능 정의 -->
	<select id="selectCountAll"
		parameterType="study.shop.cidermarket.model.Category"
		resultType="int">
		SELECT COUNT(*) FROM Category
		
<!-- 		<where>
			<if test="title != null and title != ''">
				title LIKE concat('%', #{title}, '%')
			</if>
			<if test="membno != null and membno != ''">
				AND membno=#{membno}
			</if>
		</where> -->
	</select>
	
	<!-- 데이터 저장을 위한 기능 정의 -->
	<insert id="insertItem"
		parameterType="study.shop.cidermarket.model.Category"
		useGeneratedKeys="true" keyProperty="cateno">
		INSERT INTO Category (
		name
		) VALUES (
			#{name}
		)
	</insert>
	
	<!-- 데이터 삭제를 위한 기능 정의 -->
	<delete id="deleteItem"
		parameterType="study.shop.cidermarket.model.Category">
		DELETE FROM Category WHERE cateno=#{cateno}
	</delete>
	
	<!-- 데이터 갱신을 위한 기능 정의 -->
	<update id="updateItem"
		parameterType="study.shop.cidermarket.model.Category">
		UPDATE Category SET
			cateno=#{cateno}, name=#{name}
		WHERE cateno=#{cateno}
	</update>

</mapper>